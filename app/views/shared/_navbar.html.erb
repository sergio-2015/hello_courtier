<div class="navbar-wagon navbar-wagon-fixed" id="navbar">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "Logo_bloc.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Search form -->
<!--     <form action="" class="navbar-wagon-search">
      <input type="text" class="navbar-wagon-search-input" placeholder="Search something">
      <button type="submit" class="navbar-wagon-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form> -->

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Notification -->
      <%= link_to "#", class: "navbar-wagon-item navbar-wagon-link" do %>
        <div class="badge-container">
          <i class="fa fa-envelope-o"></i>
          <div class="badge badge-blue">3</div>
        </div>
      <% end %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t ".profile", default: "Profile" %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-home"></i>  <%= t ".profile", default: "Home" %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>

      <!-- Login text link -->
      <%= link_to t(".sign_in", default: "Trouver un courtier"), root_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <%= link_to t(".sign_in", default: "Simulateurs"), root_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <%= link_to t(".sign_in", default: "Meilleurs taux"), root_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <%= link_to t(".sign_in", default: "Crédit immobilier"), root_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <% end %>
    <% if broker_signed_in? %>
      <div class="navbar-wagon-item" id="navbar-pusher"></div>
      <span>|</span>
      <div class="navbar-wagon-item" id="navbar-pusher"></div>
      <!-- BrokerAgency page management -->
      <%= link_to "#", class: "navbar-wagon-item navbar-wagon-link", title: "Editer la fiche de mon agence" do %>
        <div class="badge-container">
          <%= image_tag "multimedia-1.png", id: "navbar-icon-small" %>
        </div>

      <% end %>

      <!-- Notification -->
      <%= link_to "#", class: "navbar-wagon-item navbar-wagon-link", title: "Demandes clients en attente" do %>
        <div class="badge-container">
          <%= image_tag "documents-with-a-star.png", id: "navbar-icon" %>
          <div class="badge badge-blue">3</div>
        </div>
      <% end %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "profile.png", class: "avatar dropdown-toggle", title: "Mon profile", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t ".profile", default: "Profile" %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Déconnexion" %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>


    <% else %>

    <!-- Button (call-to-action) -->
      <%= link_to t(".top_call_to_action", default: "Accès Courtier"), "#", class: "navbar-wagon-item navbar-wagon-button btn" %>

    <% end %>

  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>

