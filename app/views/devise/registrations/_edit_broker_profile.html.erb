


<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%#= simple_form_for(resource, as: resource_name, url: edit_broker_registration_path, html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <% if resource_name == :broker %>
    <div class="">
      <%= f.input :first_name, required: true, autofocus: true, label: false, class: "broker-form-field", placeholder: "Prénom", error: 'Veuillez saisir votre prénom', include_blank: true %>
    </div>
    <div class="">
      <%= f.input :last_name, required: true, autofocus: true, label: false, class: "broker-form-field", placeholder: "Nom", error: 'Veuillez saisir votre nom' %>
    </div>
    <div class="">
      <%= f.input :phone_number, required: false, autofocus: true, label: false, class: "broker-form-field", placeholder: "Téléphone" %>
    </div>
  <% end %>

  <%= f.input :email, required: true, autofocus: true, label: false, class: "broker-form-field", placeholder: "E-mail", error: 'Veuillez saisir votre email' %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
  <% end %>

<!--   <div class="password_change text-center">
    <a id="password_change">Changer de mot de passe ?</a>
  </div> -->

  <!-- <div id="password_change_fields" class="hidden"> -->
