    <%#= f.input :password, autocomplete: "off", required: false, label: false, class: "broker-form-field", placeholder: "Nouveau mot de passe", error: 'Veuillez saisir votre nouveau mot de passe (6 caractères minimum)' %>
    <%#= f.input :password_confirmation, required: false, label: false, class: "broker-form-field", placeholder: "Confirmez votre nouveau mot de passe", error: 'Veuillez confirmer votre nouveau mot de passe (6 caractères minimum)'  %>

  <!-- </div> -->

  <div class="">
    <%= f.button :submit, "Valider", class: "btn btn-success btn-block", id: "button-broker-form"  %>
  </div>
<% end %>


