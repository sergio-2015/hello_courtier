

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "broker-form"}) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, label: false, class: "broker-form-field", placeholder: "E-mail", error: 'Veillez saisir votre email' %>
    <%= f.input :password, required: false, label: false, class: "broker-form-field", placeholder: "Mot de passe", error: 'Veillez saisir votre mot de passe' %>
    <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Se connecter", class: "btn btn-success btn-block", id: "button-broker-form" %>
  </div>
<% end %>

<div class="text-center">
  <%= render "devise/shared/links" %>
</div>


